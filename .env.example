# Permiso Environment Configuration Template
# Copy this file to .env and update with your values

# Database Configuration
PERMISO_DB_HOST=localhost
PERMISO_DB_PORT=5432
PERMISO_DB_NAME=permiso

# Migration user (superuser needed for creating database users)
MIGRATION_DB_USER=postgres
MIGRATION_DB_PASSWORD=your-secure-password-here

# RLS Database User (for organization-scoped operations)
RLS_DB_USER=rls_db_user
RLS_DB_USER_PASSWORD=changeme_rls_password

# Unrestricted Database User (for ROOT/admin operations)
UNRESTRICTED_DB_USER=unrestricted_db_user
UNRESTRICTED_DB_USER_PASSWORD=changeme_admin_password

# Server Configuration
PERMISO_SERVER_PORT=5001
LOG_LEVEL=info

# API Key Authentication (optional)
# Uncomment and set to enable API key authentication
# PERMISO_API_KEY=your-secure-api-key-here
# PERMISO_API_KEY_ENABLED=true

# Docker Configuration
# PERMISO_AUTO_MIGRATE=true  # Enable automatic database migrations (Docker only)

# Docker Registry Configuration (for docker-compose.prod.yml)
# REGISTRY_IMAGE=ghcr.io/yourorg/permiso
# TAG=latest