# Permiso Environment Configuration Template
# Copy this file to .env and update with your values

# Database Configuration
PERMISO_DB_HOST=localhost
PERMISO_DB_PORT=5432
PERMISO_DB_NAME=permiso
PERMISO_DB_USER=postgres
PERMISO_DB_PASSWORD=your-secure-password-here

# Server Configuration
PERMISO_SERVER_PORT=5001
LOG_LEVEL=info

# API Key Authentication (optional)
# Uncomment and set to enable API key authentication
# PERMISO_API_KEY=your-secure-api-key-here
# PERMISO_API_KEY_ENABLED=true

# Docker Configuration
# PERMISO_AUTO_MIGRATE=true  # Enable automatic database migrations (Docker only)

# Docker Registry Configuration (for docker-compose.prod.yml)
# REGISTRY_IMAGE=ghcr.io/yourorg/permiso
# TAG=latest